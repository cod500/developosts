<h1 class="flow-text">Add Post</h1>
<div class="row">
  <form action="/posts" method="post" class="col s12">
    <div class="row">
        <div class="input-field">
      <select name="status">
        <option value="public" selected>Public</option>
        <option value="private">Private</option>
        <option value="unpublished">Unpublished</option>
      </select>
      <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <p>
          <input name="allowComments" type="checkbox" class="filled-in" id="filled-in-box"checked="checked"/>
        <label for="filled-in-box">Allow Comments</label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <textarea name="body"></textarea>
      </div>
    </div>
    <input type="submit" value="Post" class="btn red darken">
  </form>
</div>