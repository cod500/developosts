<hr>
<div class="row">
    {{#each profile.following}}
    <div class="col s4">

        <div class="center-align">
            <div class="img-container">
                {{#if followedUser.urlImage}}
                <a href="/profile/user/{{followedUser.id}}"><img src="{{followedUser.urlImage}}"
                        class="follow-size circle responsive-img" /></a>
                {{else}}
                <a href="/profile/user/{{followedUser.id}}">
                    <a href="#"><img src="/profile/image/{{followedUser.id}}"
                            class="follow-size circle responsive-img" /></a>
                    {{/if}}
                    <p>{{followedUser.firstName}} {{followedUser.lastName}}</p>
            </div>
            {{!-- Folow button --}}
            {{{myProfile ../user followedUser._id ../profile.following}}}
            {{!-- Folow button --}}
        </div>
    </div>
    {{/each}}
</div>